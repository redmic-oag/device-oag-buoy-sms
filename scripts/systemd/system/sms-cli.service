[Unit]
Description=Recibe comandos a trav√©s de SMS
After=network.target sys-subsystem-net-devices-usb0.device
BindsTo=sys-subsystem-net-devices-usb0.device

[Service]
ExecStart=/usr/local/bin/sms-cli
PIDFile=/var/run/pid/sms-cli.pid
ExecStop=/usr/bin/pkill -15 /var/run/pid/sms-cli.pid
Restart=on-failure

[Install]
WantedBy=sys-subsystem-net-devices-usb0.device